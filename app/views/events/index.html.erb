<% if admin_signed_in? %>
  <li>
  <%= link_to('Logout', destroy_admin_session_path, method: :delete) %>        
  </li>
<% end %>
<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Message</th>
      <th>Urltolink</th>
      <th>Active</th>
      <th>Position</th>
      <th>Userid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.message %></td>
        <td><%= event.urlTolink %></td>
        <td><%= event.active %></td>
        <td><%= event.position %></td>
        <td><%= event.userID %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

