<link href='https://fonts.googleapis.com/css?family=Open+Sans:300|Raleway:200,900|Over+the+Rainbow' rel='stylesheet' type='text/css'>
<meta name="viewport" content="width=device-width, user-scalable=no">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/velocity/1.3.1/velocity.min.js"></script>
<link rel="stylesheet" href="https://unpkg.com/tachyons@4.10.0/css/tachyons.min.css"/>
<script>
    $('.hamb-wrap').on('click', function(){
      $(this).parent().children('p').toggle();
      $(this).children().toggleClass('active');
      $('nav').fadeToggle(200);
    }) 
</script>
<header>
<div class="hero">
    <article class="pa3 pa5-ns">
        <h1 class="f4 bold center mw6">Menú</h1>
        <ul class="list pl0 ml0 center mw6 ba b--light-silver br2">
          <li class="ph3 pv3 bb b--light-silver"><a href="/events">Eventos</a></li>
          <li class="ph3 pv3 bb b--light-silver"><a href="/admins">Administradores</a></li>
          <li class="ph3 pv3 bb b--light-silver"><a href="/reports_event">Reportes</a></li>
          <li class="ph3 pv3 bb b--light-silver"><a href="/settings">Configuración</a>
          <% if admin_signed_in? %>
          <li class="ph3 pv3 bb b--light-silver">
            <%= link_to('Salir', destroy_admin_session_path, method: :delete) %>        
            </li>
          <% end %>
      </ul>
      </article>
  </div>
  
</header>
<section class="content">
  <h1>Eventos</h1>
  <div class="ph1">
    <%= link_to 'Nuevo Evento', new_event_path, :class=>"f6 link dim br2 ph3 pv2 mb2 dib white bg-green" %>
  </div>

  <div class="pa2">
    <div class="overflow-auto">
      <table class="f6 w-100 mw8 center">
        <thead>
          <tr>
            <th class="fw6 bb b--black-20 tl pb3 pr3 bg-white">Nombre Evento</th>
            <th class="fw6 bb b--black-20 tl pb3 pr3 bg-white">Descripción del Evento</th>
            <th class="fw6 bb b--black-20 tl pb3 pr3 bg-white">Mensaje</th>
            <th class="fw6 bb b--black-20 tl pb3 pr3 bg-white">Url botón registrar</th>
            <th class="fw6 bb b--black-20 tl pb3 pr3 bg-white">Estatus</th>
            <th class="fw6 bb b--black-20 tl pb3 pr3 bg-white">Posición</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @events.each do |event| %>
            <tr>
              <td><%= event.name %></td>
              <td><%= event.description %></td>
              <td><%= event.message %></td>
              <td><%= event.urlTolink %></td>
              <td><%= event.active %></td>
              <td><%= event.position %></td>
              <td><%= link_to 'Editar', edit_event_path(event) %></td>
              <td><%= link_to 'Eliminar', event, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>


